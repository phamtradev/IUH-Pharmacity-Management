<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0"
    xmlns="https://jakarta.ee/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="IUHPharmacityManagement" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Liệt kê tất cả các entity classes -->
        <class>vn.edu.iuh.fit.iuhpharmacitymanagement.entity.TaiKhoan</class>
        <class>vn.edu.iuh.fit.iuhpharmacitymanagement.entity.SanPham</class>
        <class>vn.edu.iuh.fit.iuhpharmacitymanagement.entity.NhanVien</class>
        <class>vn.edu.iuh.fit.iuhpharmacitymanagement.entity.KhachHang</class>
        <class>vn.edu.iuh.fit.iuhpharmacitymanagement.entity.DonHang</class>
        <class>vn.edu.iuh.fit.iuhpharmacitymanagement.entity.ChiTietDonHang</class>
        <class>vn.edu.iuh.fit.iuhpharmacitymanagement.entity.DonNhapHang</class>
        <class>vn.edu.iuh.fit.iuhpharmacitymanagement.entity.ChiTietDonNhapHang</class>
        <class>vn.edu.iuh.fit.iuhpharmacitymanagement.entity.DonTraHang</class>
        <class>vn.edu.iuh.fit.iuhpharmacitymanagement.entity.ChiTietDonTraHang</class>
        <class>vn.edu.iuh.fit.iuhpharmacitymanagement.entity.NhaCungCap</class>
        <class>vn.edu.iuh.fit.iuhpharmacitymanagement.entity.KhuyenMai</class>
        <class>vn.edu.iuh.fit.iuhpharmacitymanagement.entity.ChiTietKhuyenMaiSanPham</class>
        <class>vn.edu.iuh.fit.iuhpharmacitymanagement.entity.DonViTinh</class>
        <class>vn.edu.iuh.fit.iuhpharmacitymanagement.entity.HangHong</class>
        <class>vn.edu.iuh.fit.iuhpharmacitymanagement.entity.ChiTietHangHong</class>
        <class>vn.edu.iuh.fit.iuhpharmacitymanagement.entity.LoHang</class>

        <properties>
            <!-- Database Connection Settings -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlserver://localhost:1433;databaseName=IUHPharmacityManagementV5;encrypt=true;trustServerCertificate=true"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value="sapassword"/>
            <property name="jakarta.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>

            <!-- Hibernate Properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServer2012Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Connection Pool Settings -->
            <property name="hibernate.connection.pool_size" value="10"/>

            <!-- Schema Generation -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
